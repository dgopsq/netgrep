{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/search/src",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "wasm-pack build --scope netgrep --out-name index",
        "cwd": "packages/search",
        "outputPath": "packages/search/pkg"
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "wasm-pack pack && wasm-pack publish",
        "cwd": "packages/search",
        "outputPath": "packages/search/packed"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "wasm-pack test --chrome --headless",
        "cwd": "packages/search"
      }
    },
    "lint": {
      "executor": "@nxrs/cargo:clippy",
      "options": {
        "fix": false,
        "failOnWarnings": true,
        "noDeps": true
      }
    }
  },
  "tags": []
}
